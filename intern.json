{
    "suites": "tests/unit/**/*.js",
    "functionalSuites": "tests/functional/**/*.js",
    "environments": [
        "node",
        "chrome",
        "firefox"
    ],
    "browser": {
        "loader": "systemjs",
        "plugins": {
            "script": "src/config.js",
            "useLoader": true
        }
    },
    "configs": {
        "saucelabs": {
            "tunnel": "saucelabs",
            "tunnelOptions": {},
            "defaultTimeout": 10000,
            "environments+": [
                {
                    "browserName": "internet explorer",
                    "version": [
                        "11.0"
                    ],
                    "platform": "Windows 7"
                },
                {
                    "browserName": "firefox",
                    "version": "43",
                    "platform": "Windows 10"
                },
                {
                    "browserName": "chrome",
                    "platform": "Windows 10"
                }
            ],
            "maxConcurrency": 4
        }
    }
}