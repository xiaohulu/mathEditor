{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015",
            "dom",
            "dom.iterable"
        ],
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "types": [
            "systemjs",
            "intern"
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}